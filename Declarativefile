pipeline{

agent any

tools{
maven 'maven-3.9.8'
}

//Checkout code
stages{
 stage('CheckOuteCode'){
 steps{
 git branch: 'development', changelog: false, credentialsId: '3e551442-eef4-4159-a209-58bd0f08b92a', poll: false, url: 'https://github.com/uptimecareer/maven-web-application.git'
 }
 }
 //Build
 stage('Build'){
 steps{
 sh "mvn clean package"
 }
 }
 //Execute SonarQube Report
 stage('ExecuteSonarQubeReport'){
 steps{
 sh "mvn clean sonar:sonar"
 }
 }
 
 // Upload Artifcats into Nexus
 stage('UploadArtifcatsIntoNexus'){
 steps{
 sh "mvn clean deploy"
 }
 }

//Deploy App into Tomcat Server
stage('DeployAppIntoTomcat'){
 steps{
  sshagent(['547bf40f-c05e-47c6-b43b-d0e79c6116e1']) {
    sh "scp  -o StrictHostKeyChecking=no target/maven-web-application.war   ec2-user@3.17.176.2:/opt/tomcat9/webapps"
}
}
 }
}//stages closing


post {
  success {
    mail bcc: '', body: 'Email Sentout from the Jenkins', cc: '', from: '', replyTo: '', subject: 'Build Status-SUCCESS', to: 'uptimecareer@gmail.com'
  }
  failure {
    mail bcc: '', body: 'Email Sentout from the Jenkins', cc: '', from: '', replyTo: '', subject: 'Build Status-FAILED', to: 'uptimecareer@gmail.com'
  }
} 
}//pipeline closing
